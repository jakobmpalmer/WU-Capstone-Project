<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/waterCountDisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_int_value"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/waterButton"
        app:layout_constraintEnd_toEndOf="@+id/waterButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/waterButton"
        app:layout_constraintTop_toBottomOf="@+id/dataDisplayTable"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/waterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="164dp"
        android:text="@string/water_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/gasButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:text="@string/gas_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toEndOf="@+id/waterButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.991" />

    <Spinner
        android:id="@+id/waterSpinner"
        android:layout_width="108dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/waterButton"
        app:layout_constraintStart_toStartOf="@+id/waterButton"
        app:layout_constraintTop_toBottomOf="@+id/waterButton"
        app:layout_constraintVertical_bias="0.24000001" />

    <TextView
        android:id="@+id/gasCountDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_int_value"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/gasButton"
        app:layout_constraintEnd_toEndOf="@+id/gasButton"
        app:layout_constraintStart_toStartOf="@+id/gasButton"
        app:layout_constraintTop_toBottomOf="@+id/dataDisplayTable"
        app:layout_constraintVertical_bias="0.95" />

    <EditText
        android:id="@+id/mileageInput"
        android:layout_width="107dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Mileage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gasButton"
        app:layout_constraintStart_toStartOf="@+id/gasButton"
        app:layout_constraintTop_toBottomOf="@+id/gasButton"
        app:layout_constraintVertical_bias="0.19999999" />

    <TableLayout
        android:id="@+id/dataDisplayTable"
        android:layout_width="266dp"
        android:layout_height="206dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002"
        tools:visibility="visible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F0F7F7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Metric" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Water" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gas" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total" />

            <TextView
                android:id="@+id/waterTotalTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_int_value" />

            <TextView
                android:id="@+id/gasTotalTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_int_value" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Millileters" />

            <TextView
                android:id="@+id/mlTotalTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_int_value" />

            <TextView
                android:id="@+id/perHourTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_int_value" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/changeActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GoTo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/waterSpinner"
        app:layout_constraintStart_toStartOf="@+id/waterSpinner"
        app:layout_constraintTop_toBottomOf="@+id/waterSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>